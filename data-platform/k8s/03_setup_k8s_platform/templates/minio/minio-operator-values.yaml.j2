# Default values for minio-operator.

operator:
  image:
    repository: "{{ minio.image_op_repository }}"
    tag: "{{ minio.image_op_tag }}"
    pullPolicy: "{{ minio.image_op_pullPolicy }}"
  imagePullSecrets: []
  replicaCount: 1
  securityContext:
    runAsUser: 1000
    runAsGroup: 1000
    runAsNonRoot: true
  resources:
    requests:
      cpu: 200m
      memory: 256Mi
      ephemeral-storage: 500Mi

console:
  image:
    repository: "{{ minio.image_co_repository }}"
    tag: "{{ minio.image_co_tag }}"
    pullPolicy: "{{ minio.image_co_pullPolicy }}"
  replicaCount: 1

